gc() {
    # Liste des r√©pertoires √† traiter
    repos=("/Users/barbidou/git/salome" "/Users/barbidou/git/cli")
    
    for repo in "${repos[@]}"; do
        cd "$repo"
        
        # Affiche le nom du r√©pertoire (basename)
        echo "üìÇ $(basename $repo) ******************************************************************************"
        
        # Ex√©cute le script de backup uniquement pour salome
        if [[ "$repo" == *"salome"* ]]; then
            /Users/barbidou/git/salome/app/backup_save_mac.sh
        fi
        
        # V√©rifie le statut git
        GIT_STATUS=$(git status)
        
        # V√©rifie si "Votre branche est √† jour" et "rien √† valider" sont pr√©sents
        if echo "$GIT_STATUS" | grep -q "Votre branche est √† jour" && echo "$GIT_STATUS" | grep -q "rien √† valider"; then
            echo "‚ú® Rien √† commiter - Branche √† jour"
            cd - > /dev/null  # Retour au r√©pertoire pr√©c√©dent silencieusement
            continue
        fi
        
        # S'il y a des changements, continuer avec le processus
        echo "üì¶ Changements d√©tect√©s :"
        git status
        git add .
        git commit -m "commit $(date "+%Y-%m-%d %H:%M:%S")"
        git push
        echo "‚úÖ Push termin√© :"
        git status
        
        cd - > /dev/null  # Retour au r√©pertoire pr√©c√©dent silencieusement
    done
}